<h1>Listing Relationships</h1>
<%= link_to 'View Family Member Users', users_path, :class => 'btn btn-primary' %> 

<table class="table table-striped" name="tbl_relationship">
  <thead>
    <tr>
      <th></th>
      <th></th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @relationships.each do |relationship| %>
      <tr>
        <td>  <%= Relationship.dis_name(relationship.relative_user_id) %></td>
        <td> Is the <%= relationship.relationship_type %></td>
        <td>  Of   <%= relationship.user.name %></td>
        <td><%= link_to 'Show', relationship, :class => 'btn btn-primary' %></td>
        <td><%= link_to 'Edit', edit_relationship_path(relationship), :class => 'btn btn-warning' %></td>
        <td><%= link_to 'Destroy', relationship, method: :delete, :class => 'btn btn-danger', data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br> 

<%= link_to 'New Relationship', new_relationship_path, :class => 'btn btn-success' %>
